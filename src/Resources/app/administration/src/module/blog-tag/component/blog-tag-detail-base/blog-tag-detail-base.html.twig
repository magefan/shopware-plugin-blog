{% block blog_tag_detail_base %}
    <sw-card
            v-if="tag"
            position-identifier="blog-tag-detail-base"
            :title="$tc('blog-tag.detail.cardTitleGeneralInfo')"
            :is-loading="isLoading"
    >
        {% block blog_tag_detail_is_active %}
            <sw-switch-field
                    v-model="tag.isActive"
                    class="magefan-blog-detail__active"
                    :disabled="!acl.can('blog_tag.editor')"
                    :label="$tc('blog-tag.detail.labelActive')"
            />
        {% endblock %}

        {% block blog_tag_detail_title %}
            <sw-field
                    v-model="tag.title"
                    type="text"
                    validation="required"
                    required
                    :error="tagTitleError"
                    :disabled="!acl.can('blog_tag.editor')"
                    :label="$tc('blog-tag.detail.labelTitle')"
                    :placeholder="$tc('blog-tag.detail.placeholderTitle')"
            />
        {% endblock %}


        {% block blog_tag_detail_content %}
            <sw-text-editor
                    v-model="tag.content"
                    sanitize-input
                    :label="$tc('blog-tag.detail.labelContent')"
                    :disabled="!acl.can('blog_tag.editor')"
                    :placeholder="$tc('blog-tag.detail.placeholderContent')"
            />
        {% endblock %}
    </sw-card>
{% endblock %}
