{% block blog_post_seo %}
<sw-card
    v-if="post"
    position-identifier="blog-post-detail-base"
    :title="$tc('blog-post.detail.cardSeoGroupInfo')"
    :is-loading="isLoading"
>

    {% block blog_post_seo_identifier %}
    <sw-field
        v-model="post.identifier"
        type="text"
        :label="$tc('blog-post.detail.labelIdentifier')"
        :placeholder="$tc('blog-post.detail.placeholderUrlKey')"
        :disabled="true"
    />
    {% endblock %}

    {% block blog_post_seo %}
        <sw-field
                v-model="post.metaTitle"
                type="text"
                :label="$tc('blog-post.detail.labelMetaTitle')"
                :disabled="!acl.can('blog_post.editor')"
                :placeholder="$tc('blog-post.detail.placeholderMetaTitle')"
        />
    {% endblock %}

    {% block blog_post_seo_meta_keywords %}
        <sw-field
                v-model="post.metaKeywords"
                type="textarea"
                :label="$tc('blog-post.detail.labelMetaKeywords')"
                :disabled="!acl.can('blog_post.editor')"
                :placeholder="$tc('blog-post.detail.placeholderMetaKeywords')"
        />
    {% endblock %}

    {% block blog_post_seo_meta_description %}
        <sw-field
                v-model="post.metaDescription"
                type="textarea"
                :label="$tc('blog-post.detail.labelMetaDescription')"
                :disabled="!acl.can('blog_post.editor')"
                :placeholder="$tc('blog-post.detail.placeholderMetaDescription')"
        />
    {% endblock %}
</sw-card>
{% endblock %}
